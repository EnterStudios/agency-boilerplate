{
    "build": {
        "dest": "build",
        "root": "./build",
        "dev": false
    },
    "development": {
        "host": "localhost",
        "dest": "dev",
        "root": "./",
        "dev": true,
        "hapi": {
            "options": {
                "port": 8050,
                "secret": "UNSAFE: CHANGE ME"
            },
            "routes": [{
                "module": "agency-server/lib/hapi/route/debug",
                "options": {}
            }, {
                "module": "agency-server/lib/hapi/route/kewego",
                "options": {
                    "appKey": "UNSAFE: CHANGE ME"
                }
            }, {
                "module": "../../../../env/routes/auth/session",
                "options": {}
            }, {
                "module": "agency-server/lib/hapi/route/static",
                "options": {}
            }, {
                "module": "agency-server/lib/hapi/route/proxy",
                "options": {}
            }, {
                "module": "../../../../env/routes/facebook/setup",
                "options": {
                  "appId": "653149338194538",
                  "appSecret": "01ea97f939594e0c4dd162a409fe1ba8"
                }
            }, {
                "module": "../../../../env/routes/facebook/doPost",
                "options": {}
            }, {
                "module": "../../../../env/routes/facebook/feed/subscription",
                "options": {}
            }]
        },
        "websocket": {
          "limitedUsers": 2
        },
        "webpack": {
          "entry": {
              "app": "./src/js/main"
          },
          "plugins": [
              {"script": "agency-environment/lib/webpack/plugins/provide", "config": {
                  "$": "jquery",
                  "jQuery": "jquery",
                  "window.jQuery": "jquery",
                  "root.jQuery": "jquery"
              }},
              {"script": "agency-environment/lib/webpack/plugins/polyfills"},
              {"script": "agency-environment/lib/webpack/plugins/dedupe"},
              {"script": "agency-environment/lib/webpack/plugins/hotReplacement"}
          ],
          "module": {
              "preLoaders": [{
                  "test": ".js$",
                  "exclude": "node_modules",
                  "loader": "jshint-loader"
              }],
              "loaders": [
                  {"test": ".hbs$", "loader": "handlebars-loader", "query": {
                      "exclude": "node_modules",
                      "knownHelpers": ["block", "content"],
                      "helperDirs": [
                        "<%= root %>/src/tmpl/partials"
                      ],
                      "debug": false
                  } },
                  {"test": ".css$", "loader": "style-loader!css-loader"},
                  {"test": ".(png|jpg|gif|svg|ttf|woff|eot)$", "loader": "url-loader?limit=100000"},
                  {"test": ".modernizrrc$", "loader": "modernizr"}
              ]
          },
          "resolve": {
            "alias": {
              "modernizr$": "<%= root %>/.modernizrrc"
            }
          },
          "files": {
            "dest": "js/[name].js",
            "library": ["[name]"]
          },
          "port": 8051
        },
        "weinre": {
            "port": 8052
        },
        "livereload": {
            "port": 8053
        }
    },

    "production": {
        "host": "localhost",
        "dest": "production",
        "root": "./production",
        "dev": false,
        "hapi": {
            "options": {
                "port": 8050,
                "secret": "UNSAFE: CHANGE ME"
            },
            "routes": [{
                "module": "agency-server/lib/hapi/route/debug",
                "options": {}
            }, {
                "module": "agency-server/lib/hapi/route/kewego",
                "options": {
                    "appKey": "UNSAFE: CHANGE ME"
                }
            }, {
                "module": "agency-server/lib/hapi/route/auth/session",
                "options": {}
            }, {
                "module": "agency-server/lib/hapi/route/static",
                "options": {}
            }, {
                "module": "agency-server/lib/hapi/route/proxy",
                "options": {}
            }]
        }
    }
}
